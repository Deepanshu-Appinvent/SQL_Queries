User Schema   ------------------------------


{ 
 userId: userId, 
 firstName: String, 
  lastName: String
email: String, 
 password: String, 
dateOfBirth: Date, 
 residence:[ { 
 houseNumber: String, 
city: String, 
 postalCode: String, 
 country: String 
} ], 
 phoneNumber: String, 
 profileImage: String, 
createdAt: Date, 
 updatedAt: Date 
 }






session_collection  -------------------------------------------

{ 
"session_id": "session_id", 
 "userId": "user_id", 
"token": "session_token", 
"expiresAt": ("date") 
 }


